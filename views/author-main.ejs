<!-- author-main.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Icon -->
    <link rel="icon" type="image/x-icon" href="/images/logo.png" />

    <!-- Library import -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <!-- CSS import -->
    <link rel="stylesheet" type="text/css" href="/main.css" />

    <!-- Internal style -->
    <style>
      .writer-blog-card {
        margin-bottom: 25px;
      }
    </style>
    <!-- Website title + logo -->
    <title>SG Odyssey: Author</title>
  </head>
  <body style="background-color: #e6e6dd">
    <%- include('partials/navigation')%>

    <div class="container-fluid d-flex h-100 pt-5">
      <div class="row flex-grow-1 w-100">
        <div class="col-3 d-flex flex-column py-4 ps-4">
          <div class="info-bar text-center mt-1 ps-1">
            <div
              class="profile card rounded-4 p-4 py-2 mt-2 d-flex justify-content-center align-items-center"
              style="background-color: #1c3c40; color: #a6bcb8"
            >
              <img
                src="/images/greet.png"
                class="img-fluid"
                style="
                  object-fit: cover;
                  height: 300px;
                  height: 100%;
                  width: 100%;
                  overflow: hidden;
                "
              />

              <h5 class="fw-bold" style="color: #e6e6dd">
                Hi, <%= author.author_name %>!
              </h5>
              <p>
                What is in your blog:
                <span class="fw-bold" style="color: #e6e6dd"
                  ><%= blog.blog_title %></span
                >?
              </p>
              <p class="mb-0" style="font-size: 13px">
                <%= publishCount %> published articles
              </p>
              <p style="font-size: 13px">
                <%= draftCount %> articles drafted
                <br />
                <span class="opacity-50" style="font-size: 12px"
                  >(psst! Don't forget to post these.)</span
                >
              </p>
            </div>

            <div
              class="writer-note card rounded-4 p-4 mt-4"
              style="background-color: #1c3c40; color: #a6bcb8"
            >
              <h5 class="fw-bold" style="color: #e6e6dd">Author view</h5>
              <p style="font-size: 13px">
                Share your unique experiences and insights about life as an
                international student in Singapore!
                <span class="fw-bold"><%= blog.blog_title %></span> is your own
                personal workspace so feel free to be yourself!This is where
                readers will find your articles. Explore your tools for creation
                and guidance if needed!
              </p>
            </div>
          </div>
        </div>

        <div class="col-9 text-white p-4 mt-3">
          <div class="d-flex mb-3">
            <button class="rounded-pill px-3 py-1 mt-auto fw-medium filter-all">
              All
            </button>
            <button
              class="rounded-pill px-3 py-1 mt-auto fw-medium mx-3 filter-published"
            >
              Published
            </button>
            <button
              class="rounded-pill px-3 py-1 mt-auto fw-medium filter-draft"
            >
              Draft
            </button>
          </div>

          <div
            id="articleContainer"
            class="container overflow-auto"
            style="font-size: 13px; max-height: 625px; overflow-x: hidden"
          >
            <div class="row">
              <!-- article posts -->
              <%- include('partials/author-article-card')%>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div
      class="d-flex position-absolute"
      style="right: 30px; bottom: 30px; font-size: 20px"
    >
      <%- include('partials/writer-tools')%>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const allButton = document.querySelector(".filter-all");
        const publishedButton = document.querySelector(".filter-published");
        const draftButton = document.querySelector(".filter-draft");
        const articleContainer = document.getElementById("articleContainer");
        const blogs = document.querySelectorAll(".writer-blog-card");

        // Initial state: show all blogs
        showAllBlogs();

        allButton.addEventListener("click", showAllBlogs);
        publishedButton.addEventListener("click", showPublishedBlogs);
        draftButton.addEventListener("click", showDraftBlogs);

        function showAllBlogs() {
          blogs.forEach((blog) => {
            blog.style.display = "block";
          });
        }

        function showPublishedBlogs() {
          blogs.forEach((blog) => {
            if (
              blog.querySelector(".blog-status").textContent.trim() !==
              "Published"
            ) {
              blog.style.display = "none";
            } else {
              blog.style.display = "block";
            }
          });
        }

        function showDraftBlogs() {
          blogs.forEach((blog) => {
            if (
              blog.querySelector(".blog-status").textContent.trim() !==
              "Drafted"
            ) {
              blog.style.display = "none";
            } else {
              blog.style.display = "block";
            }
          });
        }
      });
    </script>

    <!-- For modal -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

