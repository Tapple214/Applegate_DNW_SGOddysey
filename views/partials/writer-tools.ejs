<!-- Modal -->
<div
  class="modal fade"
  id="promptModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1
          class="modal-title fs-5 fw-bold"
          id="exampleModalLabel"
          style="color: #1c3c40"
        >
          Welcome Author!
        </h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p>
          In your blog workspace, you'll find various tools that display all
          your posted articles and saved drafts. Your profile provides a brief
          summary of your posts and drafts, along with additional notes. With
          these tools, you can create, save drafts, or post blogs.
          <br />
          Note: Choose one image to serve as your blog's cover image.
          <br />
          <br />
          Happy writing!
        </p>
      </div>
    </div>
  </div>
</div>

<!-- animation -->

<script>
  document.getElementById("blogCard").addEventListener("click", function () {
    var iconList = document.getElementById("iconList");
    iconList.classList.toggle("nav-tool-expanded");
  });

  function handleLogout(event) {
    event.preventDefault(); // Prevent the default anchor behavior

    fetch("/author/logout", {
      method: "GET",
      credentials: "same-origin", // Include cookies with the request
    })
      .then((response) => {
        if (response.ok) {
          window.location.href = "/"; // Redirect to the home page after successful logout
        } else {
          console.error("Logout failed");
        }
      })
      .catch((error) => {
        console.error("Error logging out:", error);
      });
  }
</script>

