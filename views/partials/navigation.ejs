<!-- navigation.ejs -->

<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-5sAR7xN1Nv6JQkmf4L7hfjD7tLzpPpyJGpjG5VRRjt36t74dH8D5D1tNQemrJ9Mk"
  crossorigin="anonymous"
/>

<nav
  class="navbar bg-body-tertiary position-absolute w-100"
  style="z-index: 10000"
>
  <div class="container-fluid d-flex flex-row">
    <a class="navbar-brand d-flex align-items-center" href="/">
      <img
        src="/images/logo-two.png"
        alt="Logo"
        width="30"
        height="30"
        class="d-inline-block align-text-top"
      />
      <span class="fw-bold ms-2"> SG Odyssey</span>
    </a>
    <div class="d-flex flex-row ms-auto me-3">
      <ul class="navbar-nav d-flex flex-row">
        <!-- Conditionally show "Write" link only if logged in -->
        <% if (session && session.author_id && session.author_name) { %>
        <li class="nav-item">
          <a class="nav-link active fw-semibold ms-4" href="/author/main"
            >Write</a
          >
        </li>
        <% }%>

        <li class="nav-item">
          <a
            class="nav-link active fw-semibold ms-4"
            aria-current="page"
            href="/reader/main"
            >Read</a
          >
        </li>
      </ul>
    </div>
  </div>
</nav>

