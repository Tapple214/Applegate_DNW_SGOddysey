<!-- reader-main.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Icon -->
    <link rel="icon" type="image/x-icon" href="/images/logo.png" />

    <!-- Library import -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <!-- CSS import -->
    <link rel="stylesheet" type="text/css" href="/main.css" />

    <!-- Internal style -->
    <style>
      .blog-card {
        margin-bottom: 25px;
      }

      .writer-blog-card {
        margin-bottom: 25px;
      }
    </style>
    <!-- Website title + logo -->
    <title>SG Odyssey: Reader</title>
  </head>

  <body>
    <!-- Nav bar -->
    <%- include('partials/navigation')%>

    <div class="container-fluid d-flex h-100">
     
      <!-- Carousel -->
      <%- include('partials/carousel')%>

      <!-- Divider -->
      <div class="mx-auto d-flex justify-content-center align-items-center my-3">
        <hr class="w-50" style="color: #24474B;"/>
      </div>

      <!-- If there are no blogs check -->
      <div>
        <% if (blogs.length > 0) {%>
        <h5 class="fw-bold mb-3 ms-3 text-center" style="color: #1c3c40">
          Dive into SG Odyssey's Author Blogs
        </h5>

        <!-- Blog display -->
        <%- include('partials/blog-container')%>

        <%} else {%>
        <h5 class="fw-bold mb-3 ms-3 text-center" style="color: #1c3c40">
          SG Odyssey has no blogs yet, join our community for your very own blog!
        </h5>

        <img
            src="/images/no-blogs.png"
            class="img-fluid d-flex mx-auto"
            style="
              object-fit: cover;
              height: 200px;
              width: 400px;
              overflow: hidden;
            "
          />
        <%}%>
      </div>

      <!-- Divider -->
      <div class="mx-auto d-flex justify-content-center align-items-center my-3">
        <hr class="w-50" style="color: #24474B;"/>
      </div>

      <!-- If there are no articles check -->
      <% if (articles.length > 0) {%>
      <h5 class="fw-bold mb-4 ms-3 text-center" style="color: #1c3c40">
        Browse All Articles on SG Odyssey
      </h5>

      <!-- Filtering + Article display -->
      <%- include('partials/article-filter', { articles: articles }) %> 
      <%- include('partials/reader-article-card') %> 

      <%} else {%>
      <h5 class="fw-bold mb-3 ms-3 text-center mt-3" style="color: #1c3c40">
        SG Odyssey has no articles yet, join our community to create you own articles!!
      </h5>

      <img
            src="/images/no-articles.png"
            class="img-fluid d-flex mx-auto"
            style="
              object-fit: cover;
              height: 200px;
              width: 400px;
              overflow: hidden;
            "
          />
      <%}%>
  </body>
</html>

<!-- >>> END <<< -->