<!-- blog-setup.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Icon -->
    <link rel="icon" type="image/x-icon" href="/images/logo.png" />

    <!-- Library import -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <!-- CSS import -->
    <link rel="stylesheet" type="text/css" href="/main.css" />

    <!-- Internal style -->
    <style>
      @keyframes expandWidth {
        from {
          width: 60%;
        }
        to {
          width: 100%;
        }
      }

      .animate-width {
        animation: expandWidth 2s forwards;
      }
    </style>

    <!-- Website title + logo -->
    <title>SG Odyssey</title>
  </head>

  <body class="author-login d-flex justify-content-center align-items-center w-100">
    <div class="row login-card rounded-4 d-flex flex-row w-75">
      <div class="w-50 p-0">
        <a href="/author/login">
          <button
            class="position-absolute m-3 rounded-pill px-3 py-1 fw-medium border-0"
            style="
              z-index: 100;
            "
          >
            Go back
          </button>
        </a>

        <img
          src="/images/main-background.png"
          class="img-fluid rounded-4"
          style="object-fit: cover; height: 500px"
        />
      </div>

      <div
        class="z-3 p-5 position-absolute end-0 h-100 rounded-4 animate-width"
        style="width: 60%;  background-color: #E6E6DD"
      >
        <form action="/author/setup" method="post" class="mt-5">
          <h2 class="fw-bold">Let's set you up!</h2>
          <div class="mb-3">
            <label for="blog_title" class="form-label">Name your blog!</label>
            <input
              type="text"
              class="form-control"
              id="blog_title"
              name="blog_title"
              aria-describedby="authornameHelp"
              required
            />
            <div id="blogTitleHelp" class="form-text opacity-75">
              Note: This is where your articles will be
              located! 
            </div>
          </div>
          <div class="mb-3">
            <label for="blog_subtitle" class="form-label"
              >Add a subtitle to it!</label
            >
            <input
              type="text"
              class="form-control"
              id="blog_subtitle"
              name="blog_subtitle"
            />
          </div>

          <button
            type="submit"
            class="rounded-pill px-3 py-1 mt-auto fw-medium"
          >
            All done!
          </button>
        </form>

        <img
          src="/images/plane.png"
          class="img-fluid position-absolute start-0 bottom-0"
          style="height: 100px; width: 150px;"
        />
      </div>
      </div>
    </div>

    <script>
      document.addEventListener("submit", function (event) {
        const actionValue = document.getElementById("action").value;
        if (!actionValue) {
          event.preventDefault();
        }
      });
    </script>
  </body>
</html>

