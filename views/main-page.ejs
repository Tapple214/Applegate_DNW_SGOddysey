<!-- main-page.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Icon -->
    <link rel="icon" type="image/x-icon" href="/images/logo.png">

    <!-- Library import -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <!-- Internal style -->
    <style>
      .background {
        background-image: url("/images/main-background.png");
        min-height: 880px;
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
      }

      .accent {
        background-image: url("/images/main-accent.png");
        min-height: 880px;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
      }
    </style>

    <!-- Website title + logo -->
    <title>SG Odyssey</title>

  </head>

  <body>
    <div class="background">
      <div class="accent"></div>
      <div
        class="position-fixed top-0 start-0 w-100 h-100 d-flex flex-column justify-content-start align-items-center text-center pt-4 px-5"
        style="z-index: 1;"
      >
        <div class="mt-3">
          <img
            src="/images/logo.png"
            class="img-fluid"
            style="
              object-fit: cover;
              height: 300px;
              height: 50px;
              width: 50px;
              overflow: hidden;
            "
          />
          <h1 class="fw-bold" style="color: #1c3c40">Welcome to SG Odyssey</h1>
          <h5>Thrilled to have you here!</h5>
          <br />
          <p class="px-5 pt-2 fw-medium">
            SG Odyssey is a vibrant community where international students in
            Singapore share their unique experiences and adventures. Whether
            you're looking for study tips, cultural insights, or simply a place
            to connect with fellow students, you've come to the right place.
            Dive into our stories, share your journey, and let's explore this
            exciting odyssey together!
          </p>
        </div>
        <p
          class="position-absolute bottom-0 start-50 translate-middle-x py-3 px-4 rounded-pill mb-4 fw-bold"
          style="background-color: #E6E6DD"
        >
          Scroll down for more
        </p>
      </div>
    </div>

    <!-- Join us content -->
    <div
      class="role-scroll-up position-relative h-100 pb-5"
    >
      <h1 class="fw-bold text-center py-4 pt-4">Join us!</h1>

      <!-- NOTE: texts sent as parameter MUST be written within one line or else an error will occur -->
      <div class="row px-5 h-100">
        <!-- Links to reader view -->
        <%- include('partials/role-card', { image: '/images/read.png', role: 'Reader', description: 'Immerse yourself in a world of captivating stories and insights from international students. Discover practical tips and enriching cultural experiences, all at your fingertips!', icon: 'bi bi-book', link: '/reader/main'}) %>

        <!-- Links to author view -->
        <% if (session && session.author_id && session.author_name) { %>
          <%- include('partials/role-card', { image: '/images/write.png', role: 'Author', description: 'Become a storyteller in our community by sharing your unique journey and perspectives. Inspire and guide others with your blogs, making your mark on SG Odyssey!', icon: 'bi bi-pencil', link: '/author/main' }) %>
        <% } else { %>
          <%- include('partials/role-card', { image: '/images/write.png', role: 'Author', description: 'Become a storyteller in our community by sharing your unique journey and perspectives. Inspire and guide others with your blogs, making your mark on SG Odyssey!', icon: 'bi bi-pencil', link: '/author/login' }) %>
        <% } %>
        
      </div>
    </div>  
  </body>
</html>

<!-- >>> END <<< -->