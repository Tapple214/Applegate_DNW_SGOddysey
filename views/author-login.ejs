<!-- author-login.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Icon -->
    <link rel="icon" type="image/x-icon" href="/images/logo.png" />

    <!-- Library import -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <!-- CSS import -->
    <link rel="stylesheet" type="text/css" href="/main.css" />

    <!-- Website title + logo -->
    <title>SG Odyssey</title>
  </head>

  <body
    class="author-login d-flex justify-content-center align-items-center w-100"
  >
    <!-- Toaster -->
    <% if (errorMessage) { %>
    <div class="position-absolute z-3 top-0 start-0 m-3">
      <div
        class="toast show text-white bg-danger border-0"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
        data-bs-autohide="true"
        data-bs-delay="5000"
      >
        <div class="d-flex">
          <div class="toast-body"><%= errorMessage %></div>
          <button
            type="button"
            class="btn-close btn-close-white me-2 m-auto"
            data-bs-dismiss="toast"
            aria-label="Close"
          ></button>
        </div>
      </div>
    </div>
    <% } %>

    <div class="row login-card rounded-4 d-flex flex-row w-75">
      <div class="w-50 p-0">
        <a href="/">
          <button
            class="position-absolute m-3 rounded-pill px-3 py-1 fw-medium border-0"
          >
            Go back
          </button>
        </a>

        <img
          src="/images/main-background.png"
          class="img-fluid rounded-4"
          style="object-fit: cover; height: 500px"
        />
      </div>

      <div
        class="z-3 p-5 position-absolute end-0 h-100 rounded-4"
        style="width: 60%; background-color: #e6e6dd"
      >
        <form action="/author/login" method="post" id="authForm" class="mt-5">
          <input type="hidden" id="action" name="action" value="" />
          <h2 class="fw-bold">Login or Sign up!</h2>
          <div class="mb-3">
            <label for="authorname" class="form-label"
              >Enter your author name</label
            >
            <input
              type="text"
              class="form-control"
              id="authorname"
              name="author_name"
              aria-describedby="authornameHelp"
              required
            />
            <div id="authornameHelp" class="form-text">
              Note: This is what you will use to login!
            </div>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              class="form-control"
              id="password"
              name="author_password"
              required
            />
          </div>
          <button
            type="submit"
            class="rounded-pill px-3 py-1 mt-auto fw-medium"
            onclick="document.getElementById('action').value='login';"
          >
            Login
          </button>
          &nbsp; <span class="opacity-50"> or </span> &nbsp;
          <button
            type="submit"
            class="rounded-pill px-3 py-1 mt-auto fw-medium"
            onclick="document.getElementById('action').value='signup';"
          >
            Sign up
          </button>
        </form>

        <img
          src="/images/plane.png"
          class="img-fluid position-absolute start-0 bottom-0"
          style="height: 100px; width: 150px"
        />
      </div>
    </div>

    <script>
      document
        .getElementById("authForm")
        .addEventListener("submit", function (event) {
          const actionValue = document.getElementById("action").value;
          if (!actionValue) {
            event.preventDefault(); // Prevent form submission if action is not set
          }
        });
    </script>

    <!-- For toaster -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

