<!-- article-view.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Icon -->
    <link rel="icon" type="image/x-icon" href="/images/logo.png" />

    <!-- Library import -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <!-- CSS import -->
    <link rel="stylesheet" type="text/css" href="/main.css" />

    <!-- Website title + logo -->
    <title>SG Odyssey: Reader</title>
  </head>
  <body>
    <%- include('partials/navigation')%>

    <div class="container-fluid d-flex flex-column h-100 px-0">
      <div
        class="mx-auto mt-5 pt-2 m-0"
        style="width: 100%; max-width: 95%; height: 300px; position: relative"
      >
        <img
          src="<%= article_image %>"
          class="img-fluid rounded-4 mt-4"
          style="
            object-fit: cover;
            height: 300px;
            width: 100%;
            overflow: hidden;
          "
        />

        <p class="text-start mb-0 opacity-75">Views: <%= article_views %></p>

        <div class="position-absolute top-0 end-0 mt-4 pt-4 pe-3">
          <a
            href="/blog/view/<%= blog_id %>"
            class="d-flex text-decoration-none"
          >
            <button
              class="rounded-pill px-3 py-1 mt-auto fw-medium justify-content-start"
            >
              Visit author's blog!
            </button>
          </a>
        </div>
        <div class="position-relative me-3" style="bottom: 15px">
          <%- include('partials/feedback', { content_id: article_id,
          content_type: 'article', feedback: feedback }) %>
        </div>
      </div>

      <div class="text-center mt-5 pt-4 mx-4 mb-5" style="min-height: 550px">
        <p class="badge mb-0" style="background-color: #24474b">
          <%= article_tag %>
        </p>
        <h1 class="fw-bold mb-0" style="color: #24474b">
          <%= article_title %>
        </h1>
        <p class="opacity-75"><%= created_at %></p>
        <p><%= article_content %></p>
      </div>
    </div>

    <%- include('partials/comment-section', {comment_type : 'article'}) %>
  </body>
</html>

<!-- >>> END <<< -->
